<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="testap4.Vues.InscriptionVue"
             Title="InscriptionVue">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30"
            VerticalOptions="Center">

            <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="nomEntry" Placeholder="Nom" />
            <Entry x:Name="prenomEntry" Placeholder="Prénom" />
            <Entry x:Name="passwordEntry" Placeholder="Mot de passe" IsPassword="True" />
            <Entry x:Name="telephoneEntry" Placeholder="Téléphone" Keyboard="Telephone" />
            <DatePicker x:Name="dateNaissancePicker" />

            <Button Text="S'inscrire" Clicked="OnInscriptionClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>